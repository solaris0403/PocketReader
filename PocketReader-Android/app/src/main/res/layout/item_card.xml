<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tencent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_icon"
            android:includeFontPadding="false"
            android:text="腾讯新闻"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="说起陈凯歌导演的代表作，口碑和知名度最高的当属1993年上映的《霸王别姬》了。"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="《荆轲刺秦王》剧本打磨4年，成片在大陆上映于1999年，距今已有近20年。影片讲述了一段中国人耳熟能详的，荆轲刺秦王的故事。跟后来为了拍《妖猫传》建了一座唐城一样，为了拍摄《荆轲刺秦王》，陈凯歌团队花费4年设计，在浙江横店专门建了一座秦王宫。"
            android:textColor="#969696"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_collect"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_action_collect"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="2人收藏"
            android:textColor="#cccccc"
            android:textSize="13sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_action_like"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/ic_action_comment"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_forward"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/ic_action_forward"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>